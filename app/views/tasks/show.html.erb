<p style="color: green; font-weight: bold; padding: 10px;"><%= notice %></p>

<%= render @task %>

<div style="padding: 20px; text-align: center; max-width: 600px; margin: auto;">

  <p>
    <%= link_to "Edit this task", edit_task_path(@task),
                style: "color: white; background-color: #5e2a84; padding: 10px 15px; text-decoration: none; border-radius: 5px; margin-right: 10px;" %>

    <%= link_to "Back to tasks", tasks_path,
                style: "color: white; background-color: #5e2a84; padding: 10px 15px; text-decoration: none; border-radius: 5px;" %>
  </p>

  <p style="margin-top: 15px;">
    <%= button_to "Destroy this task", @task, method: :delete,
                  style: "color: white; background-color: red; padding: 10px 15px; border: none; border-radius: 5px; cursor: pointer;" %>
  </p>

</div>