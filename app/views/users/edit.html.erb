<% content_for :title, "Editing User" %>

<h1 style="color: #5e2a84; text-align: center; padding: 10px 0;">Editing User</h1>

<div style="max-width: 600px; margin: auto; padding: 20px;">
  <%= render "form", user: @user %>

  <p style="text-align: center; margin-top: 20px;">
    <%= link_to "Show this user", @user,
                style: "color: white; background-color: #5e2a84; padding: 10px 15px; text-decoration: none; border-radius: 5px; margin-right: 10px;" %>

    <%= link_to "Back to Users", users_path,
                style: "color: white; background-color: #5e2a84; padding: 10px 15px; text-decoration: none; border-radius: 5px;" %>
  </p>
</div>
